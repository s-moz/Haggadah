\newcommand{\red}[2][\centering]{%do the red....
	% call with empty optional argument for justified text; or
	%\raggedright
	% \filbreak
	{\noindent\textcolor{midblue}{\shape#2}#1\par\nopagebreak\medskip\nopagebreak}\nopagebreak}
