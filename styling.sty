\newcommand{\DayyeinuRepeat}{	
	\vspace{1ex}
	\columnratio{0.8}
	\begin{paracol}{2}
		\centering{
			\textcolor{midblue}{...it would have been enough!\\ 
				\vspace*{1ex}}}
		\hspace*{20mm}
		\textit{\textcolor{midblue}{\LARGE ...dayeinu!}}\\ \vspace*{-2ex}
		\hspace*{28mm}
		\textcolor{darkblue}{\HUGE\texthebrew{...דַּיֵּנוּ}\\}
		\vspace*{1ex}
		\colseprulecolor{white}
	\end{paracol}}
	
